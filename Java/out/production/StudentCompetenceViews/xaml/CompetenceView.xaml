<?xml version="1.0" encoding="UTF-8"?>
<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid ShowGridLines="true">
    <Grid.RowDefinitions>
      <RowDefinition Height="50" />
      <RowDefinition Height="1*" />
      <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <ColumnDefinition Width="80*" />
      <ColumnDefinition Width="10*" />
    </Grid.ColumnDefinitions>
    <Viewbox Grid.Column="1" Grid.Row="1" x:Name="CompetenceGraph">
      <Canvas Width="700" Height="700" Margin="40" />
    </Viewbox>
    <ScrollViewer Grid.Column="0" Grid.Row="1" x:Name="StudentScroller">
      <StackPanel Margin="5" Orientation="Vertical">
        <Border BorderThickness="0.5" Background="White" Cursor="Hand" Margin="0,0,0,8.5">
          <TextBlock FontSize="12" FontStyle="Normal" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,1.5,0,1">Student1</TextBlock>
          <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="60" ShadowDepth="0" />
          </Border.Effect>
        </Border>
        <Border BorderThickness="0.5" Background="White" Cursor="Hand" Margin="0,0,0,8.5">
          <TextBlock FontSize="12" FontStyle="Normal" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,1.5,0,1">Student2</TextBlock>
          <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="60" ShadowDepth="0" />
          </Border.Effect>
        </Border>
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Page>
